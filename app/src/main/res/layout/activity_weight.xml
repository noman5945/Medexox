<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_"
    tools:context=".Weight">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="38dp"
        android:layout_marginTop="1dp"
        android:background="#D9E4F4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="Weight"
            android:textColor="#05375E"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="10dp"
            android:onClick="back"
            android:src="@drawable/ic_baseline_undo_24" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="183dp"
        android:layout_height="81dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">

        <TextView
            android:layout_width="128dp"
            android:layout_height="31dp"
            android:layout_marginLeft="25dp"
            android:text="Age"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Age"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="0 y"
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="180dp"
        android:layout_height="83dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">

        <TextView
            android:layout_width="139dp"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:text="Height"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/height"
            android:layout_width="138dp"
            android:layout_height="43dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="0 cm"
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="181dp"
        android:layout_height="87dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"

        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toTopOf="@+id/idealWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView10">


        <TextView
            android:layout_width="126dp"
            android:layout_height="29dp"
            android:layout_marginLeft="25dp"
            android:text="Gender"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/female"
            android:layout_width="63dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:src="@drawable/ic_baseline_female_24"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/female2"
            android:layout_width="63dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:src="@drawable/ic_baseline_female2_24"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/male"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:src="@drawable/ic_baseline_male1_24"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/male2"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:src="@drawable/ic_baseline_male_24"
            android:visibility="invisible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewdoc"
        android:layout_width="180dp"
        android:layout_height="83dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toTopOf="@+id/idealWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/cardView11">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:onClick="goDocList"
            android:rotationY="21"
            android:src="@drawable/doctor" />

        <TextView
            android:layout_width="162dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:text="Doctors Here!"
            android:textColor="@color/purple_700"

            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="392dp"
        android:layout_height="115dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="204dp"
            android:layout_height="44dp"
            android:text="  Current Weight  :"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="234dp" />


        <TextView
            android:id="@+id/weight"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="80dp"
            android:text="kg"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="408dp"
        android:layout_height="314dp"
        android:layout_marginTop="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/weightchart" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:text="Ideal Weight     :"
        android:textColor="#14C56C"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView6"
        app:layout_constraintEnd_toStartOf="@+id/idealWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

    </TextView>

    <TextView
        android:id="@+id/idealWeight"
        android:layout_width="173dp"
        android:layout_height="37dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:text="55kg"
        android:textColor="#14C56C"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diabates">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="687dp"
        android:background="@drawable/back_"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Diabates"
            android:textSize="24dp"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="10dp"
            android:onClick="back"
            android:src="@drawable/ic_baseline_undo_24" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewdoc"
        android:layout_width="203dp"
        android:layout_height="93dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">


        <ImageView
            android:layout_width="203dp"
            android:layout_height="67dp"
            android:onClick="goDocList"
            android:rotationY="21"
            android:src="@drawable/doctor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:text="Doctors Here!"
            android:textColor="@color/purple_700"

            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toBottomOf="@id/cardviewdoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">

        <TextView
            android:layout_width="147dp"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:text="Diabates"
            android:textSize="24dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/diabetes"
            android:layout_width="149dp"
            android:layout_height="65dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="0 "
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewxxx"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="2500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071">



        <ImageView
            android:id="@+id/indicator"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/btred"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="232dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="444dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="Condition      :"
            android:textSize="24dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/chart"
        android:layout_width="390dp"
        android:layout_height="149dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507">

        <TextView
            android:id="@+id/condi"
            android:layout_width="338dp"
            android:layout_height="65dp"
            android:background="@drawable/border"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:text="chart"
            android:textColor="@color/purple_700"
            android:textSize="24dp"></TextView>

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/diachart"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            tools:layout_editor_absoluteY="397dp" />

    </androidx.cardview.widget.CardView>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageView3"
        android:layout_width="395dp"
        android:layout_height="265dp"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="-15dp"
        android:src="@drawable/diacon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

    </com.github.chrisbanes.photoview.PhotoView>



</androidx.constraintlayout.widget.ConstraintLayout>